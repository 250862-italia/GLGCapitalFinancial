{
  "name": "glg-dashboard",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "prelaunch-check": "node prelaunch-check.js",
    "test:e2e": "npx playwright test tests/e2e-complete.test.js",
    "test:security": "npx playwright test tests/security.test.js",
    "test:post-deploy": "npx playwright test tests/e2e-complete.test.js --project=production",
    "test:investment": "npx playwright test e2e/investment-e2e.spec.ts",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "typecheck": "npx tsc --noEmit --strict",
    "setup-db": "node setup-database.js",
    "create-admin": "node create-superadmin.js",
    "healthcheck": "node scripts/healthcheck.js",
    "lighthouse": "npx lhci autorun",
    "lighthouse:manual": "npx lighthouse https://www.glgcapitalgroup.com --output=json --output-path=./lighthouse-report.json",
    "fix-rls": "node -e \"console.log('Execute scripts/fix-rls-policies.sql in Supabase SQL Editor')\"",
    "test:load": "npx artillery run scripts/load-test.yml",
    "test:api": "npx jest tests/api.test.js",
    "notify:success": "node scripts/notify.js success",
    "notify:failure": "node scripts/notify.js failure",
    "deploy:check": "npm run lint && npm run typecheck && npm run build && npm run test:security",
    "ci:full": "npm run lint && npm run typecheck && npm run build && npm run test:e2e && npm run test:security && npm run lighthouse",
    "monitor:start": "node scripts/monitor.js",
    "backup:db": "node scripts/backup-database.js",
    "validate:env": "node scripts/validate-env.js",
    "performance:audit": "npm run lighthouse:manual && node scripts/analyze-performance.js",
    "security:audit": "npm audit --audit-level=high && node scripts/security-scan.js",
    "db:migrate": "node scripts/database-migrate.js",
    "db:seed": "node scripts/database-seed.js",
    "clean": "rm -rf .next && rm -rf node_modules/.cache",
    "reset": "npm run clean && npm install && npm run build"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.12",
    "@radix-ui/react-toast": "^1.2.14",
    "@supabase/auth-helpers-nextjs": "^0.10.0",
    "@supabase/supabase-js": "^2.50.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "bcryptjs": "^3.0.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "critters": "^0.0.23",
    "dotenv": "^17.0.0",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.523.0",
    "next": "14.2.30",
    "next-i18next": "^15.4.2",
    "node-fetch": "^3.3.2",
    "nodemailer": "^7.0.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "recharts": "^3.0.2",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "zod": "^3.22.4",
    "validator": "^13.11.0",
    "helmet": "^7.1.0",
    "rate-limiter-flexible": "^4.0.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.53.2",
    "@types/node": "^20",
    "@types/nodemailer": "^6.4.17",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^8.57.1",
    "eslint-config-next": "14.2.30",
    "playwright": "^1.53.2",
    "typescript": "^5",
    "vercel": "^44.4.1",
    "@lhci/cli": "^0.12.0",
    "artillery": "^2.0.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.8",
    "supertest": "^6.3.3",
    "@types/supertest": "^2.0.16"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
